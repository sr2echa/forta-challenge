{
  "name": "forta-nethermind-bot-monitoring",
  "version": "0.0.1",
  "engines": {
    "node": ">=20"
  },
  "description": "Challenge 1 : Bot Monitoring",
  "longDescription": "a bot to monitor nethermind bots deployments (both bot creations and updates)",
  "repository": "https://github.com/sr2echa/forta-challenge/tree/main/1",
  "licenseUrl": "https://github.com/forta-network/forta-bot-sdk/blob/master/starter-project/LICENSE.md",
  "chainIds": [
    1, 137
  ],
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "nodemon --watch src --watch forta.config.json -e js,json ./src/bot.js",
    "start:prod": "node ./src/bot.js",
    "tx": "forta-agent run --tx",
    "block": "forta-agent run --block",
    "range": "forta-agent run --range",
    "alert": "forta-agent run --alert",
    "sequence": "forta-agent run --sequence",
    "file": "forta-agent run --file",
    "publish": "forta-agent publish",
    "info": "forta-agent info",
    "logs": "forta-agent logs",
    "push": "forta-agent push",
    "disable": "forta-agent disable",
    "enable": "forta-agent enable",
    "keyfile": "forta-agent keyfile",
    "stake": "forta-agent stake",
    "test": "jest"
  },
  "dependencies": {
    "@fortanetwork/forta-bot": "^0.2.3",
    "forta-agent": "^0.1.45",
    "forta-agent-tools": "^3.2.10"
  },
  "devDependencies": {
    "@fortanetwork/forta-bot-cli": "^0.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "ethers": "^6.13.1"
  }
}
